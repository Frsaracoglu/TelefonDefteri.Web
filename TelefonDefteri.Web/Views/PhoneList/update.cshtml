@model PhoneList

<div class="list-update-text">
    <h4><span class="icon-list-update-text fa fa-pencil" style="color: #5d7892">Kişi Güncelleme</span></h4>
</div>

<div class="list-update col-md-6">

    @using (Html.BeginForm("UpdatePhoneList", "PhoneList", FormMethod.Post, new {@id="updatePhoneList" }))
    {
        <div class="form-group ">
            <div class="input-group">
                <span class="input-group-text">
                    <i class="fa fa-user text-primary"></i>
                </span>
                @Html.TextBoxFor(l => l.Name, new { @class = "form-control", placeholder = "Name", name = "name" })
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-text">
                    <i class="fa fa-user text-primary"></i>
                </span>
                @Html.TextBoxFor(l => l.LastName, new { @class = "form-control", placeholder = "LastName", name = "nameLast" })
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-text">
                    <i class="fa fa-envelope text-primary"></i>
                </span>
                @Html.TextBoxFor(l => l.EMail, new { @class = "form-control", placeholder = "Email", name = "eMail" })
            </div>
        </div>
        <div class="form-group">
            <div class="input-group col-md-1">
                <span class="input-group-text">
                    <i class="fa fa-edit text-primary"></i>
                </span>
                @Html.TextBoxFor(m => m.Status, new { @class = "form-control", placeholder = "Email", name = "status" })
            </div>
            @Html.HiddenFor(l => l.ListId)
        </div>
        <button type="button" class="updateRecord btn btn-primary">Kaydet</button>
        <button type="button" style="float:right" class="goBack btn btn-primary">Geri Dön</button>
    }
</div>