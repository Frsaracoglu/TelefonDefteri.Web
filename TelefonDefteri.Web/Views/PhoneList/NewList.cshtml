@model PhoneList

<div class="newListContainer col-md-6">

    @using (Html.BeginForm("NewList", "PhoneList", FormMethod.Post))
    {
        <div class="row">
            <div class="form-group col-md-6">
                <label for="inputAd">Ad</label>
                @Html.TextBoxFor(l => l.Name, new { @class = "form-control", id = "inputAd" })
            </div>
            <div class="form-group col-md-6">
                <label for="inputLastName">Soyad</label>
                @Html.TextBoxFor(l => l.LastName, new { @class = "form-control", id = "inputLastName" })
            </div>
        </div>
        <div class="form-group">
            <label for="inputEmail">Email</label>
            @Html.TextBoxFor(l => l.EMail, new { @class = "form-control", id = "inputEmail" })
        </div>
        <div class="form-group">
            <label for="inputAddress">Adres</label>
            @Html.TextBoxFor(l => l.Address, new { @class = "form-control", id = "inputAddress" })
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <label for="inputPhone">Telefon</label>
                @Html.TextBoxFor(l => l.Phone, new { @class = "form-control", id = "inputPhone" })
            </div>
            <div class="form-group col-md-4">
                <label for="inputCity">Şehir</label>
                @Html.TextBoxFor(l => l.City, new { @class = "form-control", id = "inputCity" })
            </div>
            <div class="form-group col-md-2">
                <label for="inputStatus">Durum</label>
                @Html.TextBoxFor(l => l.Status, new { @class = "form-control", id = "inputStatus", placeholder = "1 / 0" })
            </div>
        </div>
        <div>
            <button type="submit" class="btn btn-primary">Kaydet</button>
            <button type="button" style="float:right" class="goBack btn btn-primary">Geri Dön</button>
        </div>
    }

</div>