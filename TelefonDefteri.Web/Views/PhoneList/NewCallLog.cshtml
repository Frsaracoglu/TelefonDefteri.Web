@model CallLog


<div class="list-update-text">
    <h4><span class="icon-list-update-text fa fa-pencil" style="color: #5d7892">Kişi Güncelleme</span></h4>
</div>

<div class="list-update col-md-6">

    @using (Html.BeginForm("AddCallLog", "CallLog", FormMethod.Post, new { @id = "addCallLog" }))
    {
        <div class="form-group">
            <div class="input-group">
            </div>
        </div>
        <div class="form-group ">
            <div class="input-group">
                @Html.TextBoxFor(l => l.CalledName, new { @class = "form-control", placeholder = "Name", name = "name" })
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                @Html.TextBoxFor(l => l.CalledLastName, new { @class = "form-control", placeholder = "LastName", name = "nameLast" })
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                @Html.TextBoxFor(l => l.CalledPhone, new { @class = "form-control", placeholder = "Email", name = "eMail" })
            </div>
        </div>
        <div class="form-group">
            <div class="input-group col-md-1">
                @Html.TextBoxFor(m => m.CallNext, new { @class = "form-control", placeholder = "Email", name = "status" })
            </div>
            @Html.HiddenFor(l => l.ListId)
        </div>
        <button type="button" class="updateRecord btn btn-primary">Kaydet</button>
        <button type="button" style="float:right" class="goBack btn btn-primary">Geri Dön</button>
    }
</div>